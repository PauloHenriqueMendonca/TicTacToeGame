</div>

<script>
    const X_Player = "X";
    const O_Player = "O";

    this.tabuleiro = new Object();
    this.tabuleiro.currentPlayer = X_Player;
    this.tabuleiro.spaces = Array(9).fill(null);
    this.tabuleiro.quantMoves = 0;
    this.tabuleiro.bloqueado = false;

    this.game = new Object();
    this.game.winner = tabuleiro.currentPlayer;
    this.game.userID = @(Request.QueryString["userId"]);
</script>
